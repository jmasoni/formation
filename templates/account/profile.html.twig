{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_4_layout.html.twig'] %}

	{% block title %}Modification du profil{% endblock %}

		{% block body %}
			<style>
			.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
			.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
			</style>

			<div class="container">

				<h1>Modification du profil</h1>

				{# templates/default/new.html.twig #}
				{{ form_start(form) }}

				{{ form_row(form.firstName, {'label':"Votre prénom", 'attr':{'placeholder':"Votre prénom"}}) }}
				{{ form_row(form.lastName, {'label':"Votre nom", 'attr':{'placeholder':"Votre nom"}}) }}
				{{ form_row(form.email, {'label':"Votre email", 'attr':{'placeholder':"Votre email"}}) }}
			
				{{ form_row(form.picture, {'label':"URL Image", 'attr':{'placeholder':"URL Image"}}) }}
				{{ form_row(form.introduction, {'label':"Votre introduction", 'attr':{'placeholder':"Votre introduction"}}) }}
				{{ form_row(form.description, {'label':"Votre description", 'attr':{'placeholder':"Votre description"}}) }}
				<button type="submit" class="btn btn-success" name="action" value="enregistrer"> Confirmer la modification </button>

				{{ form_end(form) }}

			</div>

		{% endblock %}


	