{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

	{% block body %}


		<div class="container" style="margin-top: 50px;">
			


			{% if (error) %}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				Mauvais identifiant ou mot de passe.
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			{% endif %}

			<h1> Formulaire de connexion </h1>

			<form method="post">

				<div class="form-group">

					<input type="text" name="_username" required="required" class="form-control" placeholder="Entrez votre email">Email


				</div>

				<div class="form-group">

					<input type="password" name="_password" required="required" class="form-control" placeholder="Entrez votre mot de Passe">Mot de passe


				</div>

				<div class="form-group">

					<input type="submit"  class="btn btn-primary">


				</div>

			</form>

		</div>
	{% endblock %}
