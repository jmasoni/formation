

<div class='col-md-4'>
	<div class="card-deck mb-4">
		<div class="card">
			<div id="carouselExampleIndicators{{ ad.id }}" class="carousel slide" data-interval='false'  data-interval='false'>
				<ol class="carousel-indicators">
					<li data-target="#carouselExampleIndicators{{  ad.id }}" data-slide-to="0" class="active"></li>
					<li data-target="#carouselExampleIndicators{{  ad.id }}" data-slide-to="1"></li>
					<li data-target="#carouselExampleIndicators{{  ad.id }}" data-slide-to="2"></li>
				</ol>
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img src="/images/apt1.jpg" class="d-block w-100" alt="...">
					</div>
					<div class="carousel-item">
						<img src="/images/apt2.jpg" class="d-block w-100" alt="...">
					</div>
					<div class="carousel-item">
						<img src="/images/apt3.jpg" class="d-block w-100" alt="...">
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators{{  ad.id }}" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators{{  ad.id }}" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
			<div class="card-body">
				<h5 class="card-title">{{ ad.title }} </h5>
				<p class="card-text">{{ ad.introduction }}</p>
			</div>
			<a class="btn btn-primary btn-lg" href="{{path('ads_show', {'slug':ad.slug})}}" role="button">En savoir plus</a>

			<div class="card-footer">
				<small class="text-muted">Logement de {{ ad.rooms }} chambre(s) à {{ ad.price }}€/nuit </small>

				{% if app.user and app.user == ad.author %}

					<div class="container">

						<div class="row">
						<div class="col">

						<a href="{{path('ads_edit',{'slug':ad.slug})}}" class="btn btn-primary"> Modifier </a> 
						</div>
						<div class="col">
						<a href="{{path('ads_delete',{'slug':ad.slug})}}" class="btn btn-danger" onclick="return confirm('Etes vous sûr de vouloir supprimer?')" > Supprimer </a>
						</div>
						</div>

					</div>

				{% endif %}
			</div>
		</div>
	</div>
</div>